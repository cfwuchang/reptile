
 .select_box{
  background: #fff;
  height: 100%;
  position: relative;
 }
 .select{
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  border-right:1px solid #efefef;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
 }
 .select_text{
  font-size: 20rpx;
  flex: 1;
 }
 .select_img{
  width: 26rpx;
  height: 26rpx;
  display: block;
  transition:transform 0.3s;
 }
 .select_img_rotate{
  transform:rotate(180deg); 
 }
 .option_box{
  position: absolute;
  top: 82rpx;
  width: 100%;
  border:1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
 }
 .option{
  display: block;
  line-height: 40rpx;
  font-size: 26rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
 }