/* pages/my/my.wxss */
.con{
  margin-top:100rpx;
  text-align: center;
}
.con .img{
  width: 300rpx;
  height: 300rpx;
}
.con .input{
  display: flex;
  margin: auto;
  /* align-items:center; */
  font-size: 32rpx;
  width: 80%;
  height: 80rpx;
  border: 2rpx solid #ccc;
  border-radius: 10rpx;
}
.bindfocus{
  border: 2rpx solid #4FBBDB !important;
}
.input input{
  flex: auto;
  padding: 20rpx;
  text-align: left;
}
.input select{
  flex: 130rpx;
}
.input .button{
  flex: 130rpx;
  font-size: 22rpx;
  line-height: 80rpx;
  background: #4FBBDB;
}
.hot,.history{
  margin: 20rpx 40rpx;
}
.hot-img ,.history-img{
  width: 46rpx;
  height: 46rpx;
  vertical-align:middle;
}
.hot-text,.history-text{
  vertical-align:middle;
  font-size: 30rpx;
  text-align: left;
  font-weight: 700;
  margin-bottom: 10rpx;
}
.hot-list text ,.history-list text{
  line-height: 40rpx;
  font-size: 26rpx;
}
.active{
  color: pink;
}
.bun .con-but{
  margin-top: 100rpx;
}